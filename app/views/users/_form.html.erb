<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
      <%= form_for @user do |f| %>
      <% if @user.errors.full_messages %>
        <% @user.errors.full_messages.uniq.each do |msg| %>
          <%= msg + "." %>
       <% end %>
    <% end %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Sign Me Up!", class: "btn btn-primary" %>
    <% end %>

    <p>Already a member? <%= link_to "Sign In", signin_path %></p>
  </div>
</div>
