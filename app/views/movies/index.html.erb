<div class="container">

  <!-- Page Heading -->
  <div class="flash"><h5><%= flash[:message] %></h5></div>
  <h1 class="my-4">Welcome Back, <%= @user.username %><br>
    <small>Here's what you've been watching:</small>
  </h1>
    <%= form_tag user_movies_path, method: :get do %>
    <%= select_tag "directors_id", options_from_collection_for_select(Director.all, :id, :name) %>
    <%= submit_tag "Filter", class: "btn btn-primary" %>
    <%= link_to "Clear Filters", user_movies_path %>
    <% end %>
  <div class="row">

<% @movies.each do |movie| %>

    <div class="col-lg-4 col-sm-6 mb-4">

      <div class="card h-100">

        <img class="card-img-top" src="<%= movie.image %>">
        <div class="card-body">
          <h4 class="card-title">
            <a href="<%= user_movie_path(@user, movie) %>"> <%= movie.title  %></a>
          </h4>
          <p class="card-text">Directed by: <%= movie.director.name %></p>



             <p class="card-text">Your Rating: <%= movie.user_movies.last.rating %></p>
             <p class="card-text">Your Review: <%= movie.user_movies.last.review %></p>



        </div>

      </div>

    </div>
<% end %>
    </div>

    <%= link_to "Add a Movie", new_user_movie_path %><br>
        <%= form_tag('/signout', method: :delete) do %>
          <%= submit_tag 'Signout', class: "btn btn-primary" %>
        <% end %>


    </div>
