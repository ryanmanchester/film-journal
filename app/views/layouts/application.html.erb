<!DOCTYPE html>
<html>
  <head>
    <title>FilmJournal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://blackrockdigital.github.io/startbootstrap-clean-blog/" rel="stylesheet">

</head>

  <body>
    <!-- Navigation -->
     <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
       <div class="container">
         <% if logged_in? %>
         <a class="navbar-brand" href="<%= user_movies_path(current_user) %>">Welcome <%= current_user.username %> </a>
         <% else %>
          <a class="navbar-brand" href="/signin">Welcome To Film Journal</a>
         <% end %>

         <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
           Menu
           <i class="fas fa-bars"></i>
         </button>
         <div class="collapse navbar-collapse" id="navbarResponsive">
           <ul class="navbar-nav ml-auto">
             <li class="nav-item">
               <a class="nav-link" href="/signup">Sign Up</a>
             </li>
             <li class="nav-item">
               <a class="nav-link" href="/signin">Sign In</a>

             </li>
           </ul>
         </div>
       </div>
     </nav>

     <!-- Page Header -->
     <header class="masthead" style="background-image: url(https://spyrestudios.com/wp-content/uploads/horror-movie-posters.jpeg)">
       <div class="overlay"></div>
       <div class="container">
         <div class="row">
           <div class="col-lg-8 col-md-10 mx-auto">
             <div class="site-heading">
               <h1>Film Journal</h1>

             </div>
           </div>
         </div>
       </div>
     </header>


    <%= yield %>


  </body>
</html>
